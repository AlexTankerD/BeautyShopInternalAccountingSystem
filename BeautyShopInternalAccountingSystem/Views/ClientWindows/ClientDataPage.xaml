<ui:Page x:Class="BeautyShopInternalAccountingSystem.Views.ClientWindows.ClientDataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BeautyShopInternalAccountingSystem.Views.ClientWindows"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1300"
      Title="ClientDataPage" Background="{StaticResource MainBackground}">

    <Grid>
        <Border>
            <Grid>
                <TextBlock Text="{Binding Path=Client.Username}"></TextBlock>
                <TextBlock Text="{Binding Path=Client.Password}"></TextBlock>
                <TextBlock Text="{Binding Path=Client.Name}"></TextBlock>
                <TextBlock Text="{Binding Path=Client.Surname}"></TextBlock>
                <TextBlock Text="{Binding Path=Client.Patronymic}"></TextBlock>
                <TextBlock Text="{Binding Path=Client.Birthday}"></TextBlock>
                <TextBlock Text="{Binding Path=Client.Sex}"></TextBlock>
                <TextBlock Text="{Binding Path=Client.Email}"></TextBlock>
                <TextBlock Text="{Binding Path=Client.Surname}"></TextBlock>
            </Grid>
        </Border>
    </Grid>
</ui:Page>
